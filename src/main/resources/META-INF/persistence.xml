<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_1.xsd"
             version="3.1">

    <persistence-unit name="TitanAxisPU" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <class>com.titanaxis.model.Fornecedor</class>
        <class>com.titanaxis.model.Categoria</class>
        <class>com.titanaxis.model.Produto</class>
        <class>com.titanaxis.model.Lote</class>
        <class>com.titanaxis.model.Usuario</class>
        <class>com.titanaxis.model.Cliente</class>
        <class>com.titanaxis.model.Venda</class>
        <class>com.titanaxis.model.VendaItem</class>
        <class>com.titanaxis.model.MovimentoEstoque</class>
        <class>com.titanaxis.model.Devolucao</class>
        <class>com.titanaxis.model.DevolucaoItem</class>
        <class>com.titanaxis.model.ContasAReceber</class>
        <class>com.titanaxis.model.MetaVenda</class>
        <class>com.titanaxis.model.auditoria.Habito</class>

        <properties>
            <!-- Database connection properties will be set programmatically -->
            <!-- See JpaUtil.java for dynamic configuration -->
            
            <!-- Connection pool settings will be set programmatically -->
            <property name="hibernate.connection.provider_class" value="org.hibernate.hikaricp.internal.HikariCPConnectionProvider"/>
            
            <!-- Hibernate settings will be set programmatically -->
            <!-- Default fallback values in case configuration fails -->
            <property name="hibernate.hbm2ddl.auto" value="validate"/>
            <property name="hibernate.show_sql" value="false"/>
            <property name="hibernate.format_sql" value="true"/>
        </properties>
    </persistence-unit>
</persistence>