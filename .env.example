# TitanAxis Environment Configuration Example
# Copy this file to .env and adjust the values according to your environment

# Database Configuration
DB_URL=jdbc:mariadb://localhost:3306/titanaxis_db
DB_USER=titan_user
DB_PASSWORD=titanpass
DB_DRIVER=org.mariadb.jdbc.Driver

# HikariCP Connection Pool Settings
HIKARI_MIN_IDLE=5
HIKARI_MAX_POOL=20
HIKARI_IDLE_TIMEOUT=30000
HIKARI_CONNECTION_TIMEOUT=30000
HIKARI_MAX_LIFETIME=1800000
HIKARI_POOL_NAME=TitanAxisHikariCP

# Hibernate Settings
HIBERNATE_SHOW_SQL=false
HIBERNATE_FORMAT_SQL=true
HIBERNATE_DDL_AUTO=validate
HIBERNATE_DIALECT=org.hibernate.dialect.MariaDBDialect

# Application Settings
APP_LOCALE=pt-BR
APP_THEME=dark

# AI Settings
AI_MODELS_PATH=./
AI_NER_PT=ner-model_pt_BR.bin
AI_NER_EN=ner-model_en_US.bin
AI_INTENT_PT=nlp-intent-model_pt_BR.bin

# Logging Settings
LOG_LEVEL=INFO
LOG_LEVEL_APP=DEBUG
LOG_FILE_PATH=logs/titanaxis.log

# Security Settings
PASSWORD_MIN_LENGTH=8
SESSION_TIMEOUT=3600000

# Report Settings
REPORTS_PATH=./reports
REPORTS_TEMP_PATH=./temp

# Development/Production Environment
ENVIRONMENT=development

# Optional: Docker-specific settings
# If running in Docker, you might want to use different values
# DB_URL=jdbc:mariadb://titanaxis-db:3306/titanaxis_db